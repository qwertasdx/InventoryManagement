@model IEnumerable<InventoryManagement.Dto.Users>
@{
    Layout = "_Layout";
}

<style>
    .modal-dialog{
        pointer-events:auto
    }
</style>
<table class="table">
    <thead>
        <tr>
            <th>
                員工編號
            </th>
            <th>
                員工姓名
            </th>
            <th>
                帳號
            </th>
            <th>
                身分
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EmployeeId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmployeeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Account)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoleName)
                </td>
                <td>
                    <form action="/Admin/Edit" method="get" style="display:inline;">
                        <input type="hidden" name="employeeId" value="@item.EmployeeId" />
                        <button type="submit" class="btn btn-secondary">修改</button>
                    </form>
                    <form action="/Admin/Delete" method="post" style="display:inline;">
                       <input type="hidden" name="employeeId" value="@item.EmployeeId" />
                       <button type="submit" class="btn btn-danger" onclick="return confirm('您確定要刪除這個項目嗎？');">刪除</button>
                    </form>                               
                </td>
            </tr>      
        }
    </tbody>
</table>



